<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.portfolio.order.dao.OrderItemsDao">
    <update id="updateOrderItemsForCancel" parameterType="com.portfolio.order.dto.OrderDto$OrderItemsCancelQuery">
	    UPDATE orderItems
		SET
		status='CANCELLED'
		WHERE
	    order_id = #{orderId};
    </update>
</mapper>