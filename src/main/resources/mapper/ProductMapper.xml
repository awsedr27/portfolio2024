<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.portfolio.product.dao.ProductDao">

    <select id="selectProductList" parameterType="com.portfolio.product.dto.ProductDto$ProductInfo" resultType="com.portfolio.product.dto.ProductResponse$ProductItemResponse">
        SELECT 
            product_id,
            name,
            description,
            price,
            category_id,
            create_date
        FROM 
            product
        <where>
            <if test="createDate != null">
                AND create_date <![CDATA[<]]> #{createDate}
            </if>
            <if test="categoryId != null">
                AND category_id = #{categoryId}
            </if>
        </where>
        ORDER BY create_date DESC
        LIMIT #{limit}
    </select>
  
  
</mapper>